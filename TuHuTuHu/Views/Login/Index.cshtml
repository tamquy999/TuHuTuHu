@{ 
    Layout = null;
}

@model TuHuTuHu.Models.Account

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand">
    <link rel="stylesheet" href="/Content/css/login.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body onload="Init()">

    @*<script>
        alert("abc");
    </script>*@
    <div class="container">
        <img class="image" src="/Content/images/Group_of_people.png">
        <div class="login-container">
            <img class="logo" src="/Content/images/Logo.png" alt="">
            <form class="form" action=@Url.Action("Index", "Login") method="post">
                @Html.AntiForgeryToken()
                <input type="text" id="user" name="user" placeholder="Tài khoản..." required>
                <input type="password" id="pass" name="pass" placeholder="Mật khẩu..." required>
                <input type="submit" id="login" name="login" value="Đăng nhập">
            </form>
            @*<a id="message">@ViewBag.LoginMessage</a>*@
            <div class="doesnt-have-acc">
                <p>Bạn chưa có tài khoản?</p>
                <p>&nbsp</p>
                <div id="signup-ask" onclick="SignupClick()">Đăng ký</div>
            </div>
            <a id="forgot-pass" onclick="ForgetPassClick()">Quên mật khẩu?</a>

        </div>
        <div class="signup-container">
            <img class="logo" src="/Content/images/Logo.png" alt="">
            <form class="form" action=@Url.Action("Signup", "Login") method="post">
                @Html.AntiForgeryToken()
                <input type="text" id="fullname" name="fullname" placeholder="Họ và tên..." required>
                <input type="text" id="user" name="user" placeholder="Tài khoản..." required>
                <input type="password" id="pass" name="pass" placeholder="Mật khẩu..." required>
                <input type="submit" id="signup" name="signup" value="Đăng kí">
            </form>
            @*<a id="message">@ViewBag.SignupMessage</a>*@
            <div class="does-have-acc">
                <p>Bạn đã có tài khoản?</p>
                <p>&nbsp</p>
                <div id="login-ask" onclick="LoginClick()">Đăng nhập</div>
            </div>
            <a id="forgot-pass" onclick="ForgetPassClick()">Quên mật khẩu?</a>
            
        </div>
        <div class="forget-pass-container">
            <img class="logo" src="/Content/images/Logo.png" alt="">
            <form class="form" action=@Url.Action("ForgetPass", "Login") method="post">
                @Html.AntiForgeryToken()
                <input type="text" id="user" name="user" placeholder="Tài khoản..." required>
                <input type="password" id="pass" name="newpass1" placeholder="Mật khẩu mới" required>
                <input type="password" id="pass" name="newpass2" placeholder="Nhập lại mật khẩu" required>
                @*<input type="text" id="user" name="OTP" placeholder="Nhập mã xác minh (tuhutuhu)" required>*@
                <input type="submit" id="forget" name="forget" value="Quên mật khẩu">
            </form>

            <a id="message">@ViewBag.ForgetMessage</a>

            <div class="does-forget-acc">
                <p>Bạn đã có tài khoản?</p>
                <p>&nbsp</p>
                <div id="login-ask" onclick="LoginClick()">Đăng nhập</div>
            </div>
            <a id="forgot-pass2" href="">Quên mật khẩu?</a>

        </div>
    </div>


    <script src="/Scripts/js/login.js"></script>

</body>

</html>