
@using TuHuTuHu.Models;

@model TuHuTuHu.Models.Newfeed

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.">
    <title>TuHu</title>
    <link rel="icon" href="/Content/favicon.ico">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand">
    <link rel="stylesheet" href="/Content/css/style.css">
    <link rel="stylesheet" href="/Content/css/lightbox.css">
    <!-- <script src="js/slimscroll.js"></script> -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }

</head>

<body>

    @RenderBody()

    <div class="sidebar">
        <div class="userzone">
            <img id="usrcover" src=@Model.account.CoverLink alt="usravt">
            <img src=@Model.account.AvtLink alt="usravt" id="usravt">
            <p id="username">@Model.account.Fullname</p>
            <p id="tagname">@("@" + Model.account.Username)</p>
        </div>
        <div class="sidenav">
            <a class="anav" href=@Url.Action("Index", "Newfeed")>
                <img class="navimg" src="/Content/images/home.svg" alt="">
                <p class="navname">Trang chủ</p>
            </a>
            <a class="anav" href="/userpage.html">
                <img class="navimg" src="/Content/images/person.svg" alt="">
                <p class="navname">Cá nhân</p>
            </a>
            <a class="anav" href="/follow.html">
                <img class="navimg" src="/Content/images/follow.svg" alt="">
                <p class="navname">Theo dõi</p>
            </a>
        </div>

        <form action="@Url.Action("LogoutResult", "Login")" method="post">
            <div class="logoutbtn" onclick="triggerLogoutButton()">Đăng xuất</div>
            <button id="logout-btn" type="submit" style="display: none">ádasdj</button>
        </form>

    </div>


    <div id="contacts">
        @foreach (var contact in ViewBag.Contacts)
        {
            <div id="contact" onclick="openChat()">
                <img src=@contact.AvtLink alt="" class="contactavt">
                <p class="contactname">@contact.Fullname</p>
            </div>
        }

    </div>


    <div id="contact-bubble" onclick="toggleContacts()">
        <img id="chaticon" src="/Content/images/contacts-w.svg" alt="">
    </div>

    <div class="chat">
        <div id="btn-bubble" onclick="openChat()">
            <img id="chaticon" src="/Content/images/chat.svg" alt="">
        </div>
        <!-- <button id="btn-openchat" onclick="openChat()">Open</button> -->
        <div id="chatbox">
            <b><div id="chathead" onclick="closeChat()">Nguyễn Văn Kiên</div></b>

            <div id="chatbody">
                <div class="yourmsg">
                    <img class="yourmsg-avt" src="/Content/images/kien-avt.jpg" alt="">
                    <div class="yourmsg-bg">
                        This is a message Nguyễn Văn Kiên sent to Nguyễn Ngọc Hưng
                    </div>
                </div>
                <div class="mymsg">
                    <div class="mymsg-bg">
                        This is a message Nguyễn Văn Kiên sent to Nguyễn Ngọc Hưng
                    </div>
                </div>
                <div class="yourmsg">
                    <img class="yourmsg-avt" src="/Content/images/kien-avt.jpg" alt="">
                    <div class="yourmsg-bg">
                        This is a message Nguyễn Văn Kiên sent to Nguyễn Ngọc Hưng
                    </div>
                </div>
                <div class="mymsg">
                    <div class="mymsg-bg">
                        This is a message Nguyễn Văn Kiên sent to Nguyễn Ngọc Hưng
                    </div>
                </div>
                <div class="yourmsg">
                    <img class="yourmsg-avt" src="/Content/images/kien-avt.jpg" alt="">
                    <div class="yourmsg-bg">
                        This is a message Nguyễn Văn Kiên sent to Nguyễn Ngọc Hưng
                    </div>
                </div>
                <div class="mymsg">
                    <div class="mymsg-bg">
                        This is a message Nguyễn Văn Kiên sent to Nguyễn Ngọc Hưng
                    </div>
                </div>
            </div>
            <div class="chat-footer">
                <form>
                    <textarea name="texting" oninput="auto_grow_chat(this)" placeholder="Nhập tin nhắn..."></textarea>
                    <img id="sendimg" src="/Content/images/send.svg" alt="">
                </form>
            </div>
        </div>
    </div>

    <div class="topbar">
        <a href=""><img id="logo" src="/Content/images/Tuhu-Logo.png" alt=""></a>
        <input name="searchbar" type="search" placeholder="Tìm kiếm...">
    </div>

    <script src="/Scripts/js/script.js"></script>
    <script src="/Scripts/js/lightbox.js"></script>
</body>

</html>